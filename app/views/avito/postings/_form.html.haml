%fieldset
  %legend 
    Загрузка новых фотографий
  %form#my-awesome-dropzone.dropzone{:action => "/images"}
    =hidden_field_tag :authenticity_token, form_authenticity_token
    =hidden_field_tag :img_class, "avito_posting"


= form_for @avito_posting do |f|
  - if @avito_posting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@avito_posting.errors.count, "error")} prohibited this avito_posting from being saved:"
      %ul
        - @avito_posting.errors.full_messages.each do |msg|
          %li= msg
  
  %fieldset
    %legend Параметры задачи 
    .row
      .large-6.columns
        .field
          = f.label :name, "Имя задачи"
          = f.text_field :name

        .row
          .large-6.columns
            %label
              Включить задачу
            .switch
              = f.check_box :active, {:checked => "checked"}
              = f.label :active
          .large-6.columns
            %label
              Разрешить ответы на почту
            .switch
              = f.check_box :allow_mail, {:checked => ""}
              = f.label :allow_mail


      .large-6.columns
        .field
        = f.label :interval do 
          Интервал дней: 
          %span{:id=>"avito_interval"}

        .range-slider{ :data => { :slider => "",  
                                  :options=> "start: 1; end: 60; display_selector: #avito_interval; initial: 7;" } }
          %span.range-slider-handle{:role => "slider", :tabindex => "7"}
          %span.range-slider-active-segment
          = hidden_field_tag :interval, :value => 7

        .field
          = f.label :uniq, 'Тип уникализации текста'
          = select_tag "uniq", options_for_select([["Два варианта",1], 
                                                   ["Без уникализации (опасненько)", 0], 
                                                   ["Перестановка предложений",{:disabled => "disabled"}, 2], 
                                                   ["Синонимизация",{:disabled => "disabled"}, 3], 
                                                   ["Рандомный выбор", {:disabled => "disabled"}, 4]], 1)

        .field
          = f.label :accont, 'Аккаунт для постинга'
          = select_tag "interval", options_from_collection_for_select(@work_account, "id", "login")


  %fieldset
    %legend Регион/категория 
    .row
      .large-6.columns
        %label 
          Выберите регион
        %select#avito_main_regions{:name => "taskq[p][locationId]"}
        #avito_sub_regions
      .large-6.columns
        %label
          Категория
        %select#avito_main_cs
        %label
          Подкатегория
        %select#avito_sub_cs{:disabled => "", :name => 'taskq[p][categoryId]'}
    .row
      .large-12.cloumns
        %span{:class => "sub-params", :id => "subl_location"}      
    .row#avito_search_params

  //-if @avito_posting.id.nil?
  %ul.tabs{"data-tab" => "", :role => "tablist"}
    %li.tab-title.active{:role => "presentational"}
      %a{"aria-selected" => "true",  :controls => "panel2-1", :href => "#panel2-1", :role => "tab", :tabindex => "0"} Вариант 1
    %li.tab-title{:role => "presentational"}
      %a{"aria-selected" => "false", :controls => "panel2-2", :href => "#panel2-2", :role => "tab", :tabindex => "0"} Вариант 2
  //-else
  //  aa



  .tabs-content
    %section#panel2-1.content.active{"aria-hidden" => "false", :role => "tabpanel"}
      .field
        = f.label :title
        = text_field_tag "title[0]"
      .field
        = f.label :description
        = text_area_tag "description[0]", "1", :maxlength=>"3000"
      .field
        = f.label :price
        = text_field_tag "price[0]"
      .field
        = f.label :images
        = text_field_tag :images

    %section#panel2-2.content{"aria-hidden" => "true", :role => "tabpanel"}
      .field
        = f.label :title
        = text_field_tag "title[1]"
      .field
        = f.label :description
        = text_area_tag "description[1]", "2", :maxlength=>"3000"
      .field
        = f.label :price
        = text_field_tag "price[1]"
      .field
        = f.label :images
        = text_field_tag :images



  .actions
    = f.submit 'Save'
