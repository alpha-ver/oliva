= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .row
    .large-12.columns
      = f.label :name
      = f.text_field :name, :placeholder => "Имя задачи"




  .row
    .large-6.columns
      %label 
        Выберите регион
      %select#avito_main_regions

      #avito_sub_regions






    .large-6.columns
      %label
        Категория
      %select#avito_main_cs

      %label
        Подкатегория
      %select#avito_sub_cs{:disabled => ""}

  %hr
  .row#avito_search_params
  %hr


  .row
    .large-6.columns
      = f.label :interval
      = f.number_field :interval
    .large-6.columns
      .switch
        = f.check_box :active
        = f.label :active
  .row
    .large-4.columns
      = f.button 'Save'
    .large-4.columns
      = f.button 'Save'
    .large-4.columns
      = f.button 'Save'
