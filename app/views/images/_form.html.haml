= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :hash
    = f.text_field :hash
  .field
    = f.label :class
    = f.text_field :class
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
